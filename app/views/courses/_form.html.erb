<%= form_for @course do |c| %>
<form role="form">
  <div class="form-group">   
    <label>
      Course name:
    </label>
    <%= c.text_field :name %>
  </div>
  <div class="form-group">   
    <label>
      Course hours:
    </label>
    <%= c.text_field :hours %>
  </div>
  <button type="submit" class="btn btn-primary btn-md">
    "Save"
  </button>
</form>
<% end %>

<%= form_for @course, class: "form-horizontal" do |c| %>
<% if @course.errors.any? %>
  <% @course.errors.full_messages.each do |error| %>
  <%= js add_gritter(error, title: "School App Notification", sticky: false) %>
  <% end %>
<% end %>

  <div class="form-group">   
   <%= c.label :Name, class: "col-sm-2 control-label" %>
    <%= c.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">   
   <%= c.label :Hours, class: "col-sm-2 control-label" %>
    <%= c.text_field :hours, class: "form-control" %>
  </div>
  <button type="submit" class="btn btn-warning btn-lg btn-block">
    Save
  </button>

<% end %>

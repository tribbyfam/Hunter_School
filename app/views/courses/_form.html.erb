<%= form_for @course do |c| %>

  <div class="form-group">   
   <%= c.label :Name, class: "col-sm-2 control-label" %>
    <%= c.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">   
   <%= c.label :Hours, class: "col-sm-2 control-label" %>
    <%= c.text_field :hours, class: "form-control" %>
  </div>
  <button type="submit" class="btn btn-primary btn-lg btn-block">
    Save
  </button>

<% end %>

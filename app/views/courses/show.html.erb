<div>
  <h2><%= @course.name %></h2>
</div>

<div class="well">
  <div>
    <h3><span>Course Name:</span> <%= @course.name %></h3>
  <div>
    <h3><span>Course Hours:</span> <%= @course.hours %></h3>
  </div>
  <div>
    <h3><span>Cohorts:</span> <% @course.cohorts.each do |cohort| %>
    <%= cohort.name %></h3> 
    <% end %>
  </div>
</div>

<%= link_to "Edit", edit_course_path(@course), class: "btn btn-primary" %>
<%= link_to "Add Cohort", new_cohort_path(@cohort), class: "btn btn-success" %>



<% @users.each do |user| %>

<div class="container-fluid">
  <div class="row media">
    <div class="col-md-2">
      <div class="media-left media-top">
        <a href="#">
          <%= image_tag(user.email, size: "66", class: "photo") %>
        </a>
        <% if user.role == 'instructor' %> 
        <p><%= puts "Instructor" %></p>
        <% end %>
      </div>
    </div>
    <div class="col-md-9 profile-info">
      <p><span>Name: </span><%= user.full_name %></p>  
      <p><span>Age: </span><%= user.age %></p>
      <p><span>Education: </span><%= user.education %></p>
      <p><span>Salary: </span><%= user.salary %></p>
      <div class="row">
        <div class="col-md4">
          <i class="far fa-pencil-alt index-icons"><%= link_to '' %></i> 
          <i class="fas fa-trash-alt index-icons"><%= link_to '' %></i>
          <i class="fas fa-folder-open index-icons"><%= link_to '' %></i>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>